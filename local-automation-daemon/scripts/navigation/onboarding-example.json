    {
      "action": "tap",
      "x": 375,
      "y": 750,
      "comment": "Tap 'Next'"
    },
    {
      "action": "wait",
      "seconds": 1
    },
    {
      "action": "screenshot",
      "name": "03_feature_2.png",
      "comment": "Second feature screen"
    },
    {
      "action": "tap",
      "x": 375,
      "y": 750,
      "comment": "Tap 'Next'"
    },
    {
      "action": "wait",
      "seconds": 1
    },
    {
      "action": "screenshot",
      "name": "04_feature_3.png",
      "comment": "Third feature screen"
    },
    {
      "action": "tap",
      "x": 375,
      "y": 750,
      "comment": "Tap 'Done'"
    },
    {
      "action": "wait",
      "seconds": 1
    },
    {
      "action": "screenshot",
