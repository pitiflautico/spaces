{
  "name": "Main Features Flow",
  "description": "Navigate through main app features and capture key screens",
  "steps": [
    {
      "action": "wait",
      "seconds": 2
    },
    {
      "action": "screenshot",
      "name": "01_dashboard.png",
      "comment": "Main dashboard"
    },
    {
      "action": "tap",
      "x": 100,
      "y": 150,
      "comment": "Open menu"
    },
    {
      "action": "wait",
      "seconds": 0.5
    },
    {
      "action": "screenshot",
      "name": "02_menu.png",
      "comment": "Navigation menu"
    },
    {
      "action": "tap",
      "x": 200,
      "y": 300,
      "comment": "Select 'Settings'"
    },
    {
      "action": "wait",
      "seconds": 1
    },
    {
      "action": "screenshot",
      "name": "03_settings.png",
      "comment": "Settings screen"
    },
    {
      "action": "scroll",
      "direction": "down",
      "amount": 200
    },
    {
      "action": "wait",
      "seconds": 0.5
    },
    {
      "action": "screenshot",
      "name": "04_settings_bottom.png",
      "comment": "Settings scrolled"
    }
  ]
}
